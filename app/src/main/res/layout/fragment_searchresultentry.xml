<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp">

    <!-- Content Card contents. -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/title_description_block"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp">

            <TextView
                    android:id="@+id/result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Title"/>

            <TextView
                    android:id="@+id/result_description"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:textSize="13sp"
                    tools:text="Description"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="16dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/al_ic_web"/>

                <TextView
                        android:id="@+id/result_url"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        tools:text="URL"/>

            </LinearLayout>


        </LinearLayout>

        <!-- more menu dots -->
        <!--<ImageButton-->
        <!--android:id="@+id/actionlist_dialog_content_card_button_options_menu"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical|end"-->
        <!--android:layout_marginEnd="@dimen/a2m_actionlist_content_card_button_margin_start"-->
        <!--android:layout_marginStart="@dimen/a2m_actionlist_content_card_button_margin_start"-->
        <!--android:layout_weight="13"-->
        <!--android:background="?android:selectableItemBackground"-->
        <!--android:src="@drawable/a2m_ic_more"/>-->

    </LinearLayout>

</android.support.v7.widget.CardView>
